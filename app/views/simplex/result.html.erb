<div class="container-fluid">
  <div class="container xcenter">
    <h2 class="text-center"><cite>Tabelas</cite></h2>

    <div class="container-fluid">
      <div id="tables" class="carousel slide container-fluid" data-ride="carousel" data-interval="false">
        <!-- Indicators -->
        <ol class="carousel-indicators">

          <% 0.upto(@tables.length - 1) do |i| %>
              <li data-target="#tables" data-slide-to="<%= i %>"></li>
          <% end %>
          <li data-target="#tables" data-slide-to="0" class="active carousel-pos"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
          <div class="item">
            <div class="text-center">
              <h3><label class="label label-default">Tabela Inicial</label></h3>
              <br>
            </div>
            <!-- Tabela inicial -->
            <table class="table table-striped table-hover">
              <% @table.each_with_index do |line, i| %>
                  <tr>
                    <% line.each do |el| %>
                        <% if i == 0 %>
                            <th><%= el %></th>
                        <% else %>
                            <td><%= el %></td>
                        <% end %>
                    <% end %>
                  </tr>
              <% end %>
            </table>
          </div>
          <!-- Tabelas seguintes -->
          <% @tables.each_with_index do |tb, index| %>
              <% if @tables.length - 1 == index %>
                  <div class="item active">
                    <div class="text-center">
                      <h3><label class="label label-default">Iteração <%= index + 1 %> - Tabela Final</label></h3>
                      <br>
                    </div>
              <% else %>
                  <div class="item">
                    <div class="text-center">
                      <h3><label class="label label-default">Iteração <%= index + 1 %></label></h3>
                      <br>
                    </div>
              <% end %>

              <table class="table table-striped table-hover">
                <% tb.each_with_index do |line, i| %>
                    <tr>
                      <% line.each do |el| %>
                          <% if i == 0 %>
                              <th><%= el %></th>
                          <% else %>
                              <td><%= el %></td>
                          <% end %>
                      <% end %>
                    </tr>
                <% end %>
              </table>
              </div>
          <% end %>
          </div>

          <!-- Left and right controls -->
          <a class="left carousel-control" href="#tables" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#tables" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>
  </div>
  <br>

  <div class="container-fluid">
    <div class="container xcenter">
      <h2 class="text-center"><cite>Resultado</cite></h2>
      <table class="table table-striped table-hover">
        <tr>
          <th></th>
          <th>Custo Sombra</th>
          <th>L. Min</th>
          <th>L. Max</th>
          <th>Valor</th>
        </tr>
        <!-- Tabela Resultado - Análise de sensibilidade -->
        <% @result.each do |line| %>
            <tr>
              <% line.each do |e| %>
                  <td><%= e %></td>
              <% end %>
            </tr>
        <% end %>

      </table>
    </div>
  </div>
</div>