<div class="col-md-2 col-sm-2 col-xs-2">
  <div class="nav nav-stacked">
    <p class="text-center"><strong>Função<small>(max)</small></strong>:</p>
    <p class="text-center"><strong>Z</strong> =
      <% @array[0].each_with_index do |val,i| %>
        <% unless i == 0 %>+<% end %><%= val %><strong><%= "X" %><small><%= (i + 1) %></small></strong>
      <% end %>
    </p>

    <br>

    <p class="text-center"><strong><u>Restrições:</u></strong></p>
    <ul>
    <% @array[1].each_with_index do |sa,index| %>
	      <li><strong>SA<%= index + 1 %></strong> =
		    <% sa.each_with_index do |val,i| %>
	        <% unless i == 0 %>+<% end %><%= val %><strong><%= "X" %><small><%= (i + 1) %></small></strong>
	        <% end %>&le; <%= @array[2][index] %>
	      </li>
    <% end %>
    </ul>

  </div>
</div>


<div class="col-md-10 col-sm-10 col-xs-10">
  <h2>Resultado</h2>

  <div class="container-fluid">
    <div id="tables" class="carousel slide container-fluid" data-ride="carousel" data-interval="false">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#tables" data-slide-to="0" class="active carousel-pos"></li>

        <% 1.upto(@tables.length) do |i| %>
            <li data-target="#tables" data-slide-to="<%= i %>"></li>
        <% end %>

      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner" role="listbox">
        <div class="item active">
          <div class="text-center">
            <h3><label class="label label-default">Tabela Inicial</label></h3>
            <br>
          </div>
          <table class="table table-striped table-hover">
            <% @table.each_with_index do |line, i| %>
                <tr>
                  <% line.each do |el| %>
                      <% if i == 0 %>
                          <th><%= el %></th>
                      <% else %>
                          <td><%= el %></td>
                      <% end %>
                  <% end %>
                </tr>
            <% end %>
          </table>
        </div>

        <% @tables.each_with_index do |tb,index| %>
            <div class="item">
              <div class="text-center">
                <h3><label class="label label-default">Iteração <%= index + 1 %></label></h3>
                <br>
              </div>
              <table class="table table-striped table-hover">
                <% tb.each_with_index do |line, i| %>
                    <tr>
                      <% line.each do |el| %>
                          <% if i == 0 %>
                              <th><%= el %></th>
                          <% else %>
                              <td><%= el %></td>
                          <% end %>
                      <% end %>
                    </tr>
                <% end %>
              </table>
            </div>
        <% end %>
      </div>

      <!-- Left and right controls -->
      <a class="left carousel-control" href="#tables" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#tables" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>
